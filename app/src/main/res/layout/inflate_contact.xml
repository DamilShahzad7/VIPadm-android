<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rledit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:background="@drawable/underline_white">


    <TextView
        android:id="@+id/tvdeleteall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:layout_toStartOf="@+id/btedit"
        android:layout_toLeftOf="@+id/btedit"
        android:background="@drawable/rectdelete"
        android:gravity="center|start"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp"
        android:text="DELETE ALL"
        android:textColor="@color/red"
        android:textSize="12sp" />

    <View
        android:id="@+id/vline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvdeleteall"
        android:layout_marginTop="4dp"
        android:background="@color/grey"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvcontactname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vline"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/btedit"
        android:layout_toLeftOf="@+id/btedit"
        android:gravity="center|start"
        android:textSize="12sp"
        tools:text="sri" />

    <TextView
        android:id="@+id/tvemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcontactname"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/btedit"
        android:layout_toLeftOf="@+id/btedit"
        android:gravity="center|start"
        android:textSize="12sp"
        tools:text="sri" />

    <ImageView
        android:id="@+id/btedit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/vline"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toLeftOf="@+id/btdelete"
        android:src="@drawable/iconedit" />


    <ImageView
        android:id="@+id/btdelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/vline"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:src="@drawable/icondelete" />


</RelativeLayout>